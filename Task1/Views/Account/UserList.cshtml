@model List<AppUser>

<div class="container">

    <div class="mt-2 d-flex" style="justify-content:flex-end">

    </div>


    <table class="table table-dark mt-3">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Fullname</th>
                <th scope="col">IsAdmin</th>

                <th scope="col">Settings</th>


            </tr>
        </thead>
        <tbody>
            @foreach (AppUser user in Model)
            {
                if (user.UserName != "admin")
                {
                    <tr>
                        <td>@user.Id</td>

                        <td>@user.UserName</td>
                        <td>@user.FullName</td>

                        <td>@user.IsAdmin</td>




                        <td>
                            @if (!user.IsAdmin == true)
                            {
                                <a asp-controller="account" asp-action="AdminStatus" asp-route-id="@user.Id" class="btn btn-success btn-icon-text">
                                    <i class="mdi mdi-file-check btn-icon-append"></i>
                                    Give Admin Status
                                </a>
                            }
                            else
                            {
                                <a asp-controller="account" asp-action="AdminStatus" asp-route-id="@user.Id" class="takeAdmin btn btn-danger btn-icon-text">
                                    <i class="mdi mdi-file-check btn-icon-append"></i>
                                    Take Admin Status
                                </a>
                            }



                        </td>
                    </tr>

                }




            }

        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(".takeAdmin").click(function (e) {
            e.preventDefault();
            console.log("aue")

            var link = '/Account/AdminStatus'

           

            fetch(link).then(res => res.json()).then(data => {

                console.log(data)
               
            })




        })

    </script>
}